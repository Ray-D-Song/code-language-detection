{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "outDir": "dist/lib"
  },
  "include": [
    "lib/**/*.ts"
  ]
}
